<% include ../partials/header %>

<div class="container">
    <div class="row text-center"  style="display:flex; flex-wrap:wrap; padding-top: 30px; padding-bottom: 15px">
        <table style="width: 60%">
            <tr style="background-color: gainsboro">
                <th  style="text-align: center">
                    <h4>Producto (Modifica)</h4>
                </th>
            </tr>    
        </table>        

    </div>
</div>


<div class="titulo">
    <div class="ui main text container ">


        <form class="ui form" action="/producto/<%= data._id %>?_method=PUT" method="POST">
            
            <div class="form-group">
                <label for="codigo">Código</label>
                <input class="form-control" id="codigo" type="text" name="data[codigo]" placeholder="Código"
                    value="<%= data.codigo %>">
            </div>
            
            <div class="form-group">
                <label for="descripcion">Descripción</label>
                <input class="form-control" id="descripcion" type="text" name="data[descripcion]" placeholder="Descripción"
                    value="<%= data.descripcion %>">
            </div>
            
            <div class="form-group">
                <label for="especificacion">Especificación</label>
                <input class="form-control" id="especificacion" type="text" name="data[especificacion]" placeholder="Especificación"
                    value="<%= data.especificacion %>">
            </div>
            
            <div class="form-group">
                <label for="imagen">URL Imágen</label>
                <input class="form-control" id="imagen" type="text" name="data[imagen]" placeholder="URL Imágen"
                    value="<%= data.imagen %>">
            </div>
            
            <div class="form-group">
                <label for="precioCompra">Precio Compra</label>
                <input class="form-control" id="precioCompra" type="text" name="data[precioCompra]" placeholder="Precio Compra"
                    value="<%= data.precioCompra %>">
            </div>
            
            <div class="form-group">
                <label for="precioVenta">Precio Venta</label>
                <input class="form-control" id="precioVenta" type="text" name="data[precioVenta]" placeholder="Precio Venta"
                    value="<%= data.precioVenta %>">
            </div>


            <input class="btn btn-lg btn-primary btn-block" type="submit">
        </form>    


    </div>
</div>








<% include ../partials/footer %>
